<div class="card" @attributes="@Values">

    <CardHeader>@HeaderText</CardHeader>

    <CardBody>@ChildContent</CardBody>

</div>

@code {

    ///<summary>This is the header text for the card</summary>
    [Parameter] public string HeaderText { get; set; }

    [Parameter] public RenderFragment ChildContent { get; set; }

    [Parameter(CaptureUnmatchedValues=true)] public Dictionary<string,object> Values { get; set; }

}